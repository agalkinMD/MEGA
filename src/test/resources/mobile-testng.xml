<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Мобильный клиент" verbose="1" parallel="tests" thread-count="2">

    <test name="Test iOS (iPhone 6-Anton)">
        <parameter name="deviceName" value="iPhone 6"/>
        <parameter name="platform" value="iOS 11.2.5"/>
        <parameter name="udid" value="000c3a4f52bd60314def98ff164b0a1fc7d1390a"/>
        <parameter name="mobilePort" value="8101"/>
        <parameter name="serverPort" value="4728"/>

        <groups>
            <define name="all">
                <include name="check-in"/>
                <include name="functional"/>
            </define>
            <run>
                <include name="check-in"/>
            </run>
        </groups>

        <classes>
            <class name="ru.mobiledimension.megaapp.tests.profile.SignInScreenTest"/>
        </classes>
    </test>

    <test name="Test Android (Nexus 5-Office)">
        <parameter name="deviceName" value="Nexus 5"/>
        <parameter name="platform" value="Android 6.0.1"/>
        <parameter name="udid" value="0391d3a4437f32ab"/>
        <parameter name="mobilePort" value="8200"/>
        <parameter name="serverPort" value="4726"/>

        <groups>
            <define name="all">
                <include name="check-in"/>
                <include name="functional"/>
            </define>
            <run>
                <include name="check-in"/>
            </run>
        </groups>

        <classes>
            <class name="ru.mobiledimension.megaapp.tests.profile.SignInScreenTest"/>
        </classes>
    </test>
</suite>
